# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=portal-dev

# Mapbox (Frontend - Public Token)
VITE_MAPBOX_TOKEN=pk.your_mapbox_token_here

# Sentry Error Monitoring (Frontend - Optional)
# Sign up at https://sentry.io and create a project to get these values
VITE_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
VITE_SENTRY_RELEASE=tracks-explorer@1.0.0
VITE_APP_VERSION=1.0.0
VITE_BUILD_TIME=2024-01-01T00:00:00Z

# Sentry Build Plugin (Optional - for source map upload)
# Get auth token from https://sentry.io/settings/account/api/auth-tokens/
SENTRY_AUTH_TOKEN=your_auth_token_here
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-slug

# Authentication
VITE_GLOBAL_PASSW=your_global_admin_password
DEMO_IMEI=demo_imei
DEMO_PASSWORD=demo_password

# Pelagic Data API (Backend Only - Move to server-side)
# ⚠️  SECURITY: These should be moved to backend-only environment variables
VITE_API_BASE_URL=https://analytics.pelagicdata.com/api
VITE_API_TOKEN=your_api_token
VITE_API_SECRET=your_api_secret
VITE_PELAGIC_API_BASE_URL=https://analytics.pelagicdata.com
VITE_PELAGIC_USERNAME=your_username
VITE_PELAGIC_PASSWORD=your_password
VITE_PELAGIC_CUSTOMER_ID=your_customer_id

# Google Cloud (Backend Only - for fallback data)
GCP_SA_KEY=your_service_account_key_json
FALLBACK_PARQUET_BUCKET=your_bucket_name
FALLBACK_PARQUET_OBJECT=path/to/parquet/file
FALLBACK_PARQUET_URL=https://storage.googleapis.com/...

# CORS Configuration (Production)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Server Configuration
SERVER_PORT=3001
NODE_ENV=development
